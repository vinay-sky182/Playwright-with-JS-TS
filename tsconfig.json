{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "**/*.ts",
        "tests/**/*.ts",
        "playwright.config.ts",
        "tests-examples/demo-todo-app.spec.ts"
    ]
}